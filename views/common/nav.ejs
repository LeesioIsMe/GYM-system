</header>
<script>
    var nav = "<%= nav %>";
    $(".header-nav li").each(function (i, v) {
        if ($(v).data("nav") == nav) {
            $(v).addClass("on").siblings().removeClass("on");
            return;
        }
    })
    var user = $.cookie("user");
    if (user) {
        user = JSON.parse(user);
        var userInfo = `
        <ul>
            <li>
                <a href="/users/tospace/${user.id || ''}">
                    <span>${user.name || user.account}</span>
                </a>
                <a href="javascript:;" onclick="logout()">
                    <span>退出</span>
                </a>
            </li>
        </ul>
        `
        $("#userInfo").html(userInfo);
    }
    $(".nav-news").mouseover(function () {
        $(".nav-news-down-list").slideDown();
        $("#newsIcon").addClass("fa-angle-up").removeClass("fa-angle-down")
    }).mouseleave(function () {
        $(".nav-news-down-list").slideUp();
        $("#newsIcon").addClass("fa-angle-down").removeClass("fa-angle-up")
    })


</script>
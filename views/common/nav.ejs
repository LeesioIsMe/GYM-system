                <li data-nav="courses">
                    <a href="/courses/tocourse">
                        <span>课程介绍</span>
                    </a>
                </li>
                <li data-nav="vipmanage">
                    <a href="/users/tovipmanage/5/1">
                        <span>会员管理</span>
                    </a>
                </li>
            </ul>
            <div class="user-info" id="userInfo">
                <ul>
                    <li>
                        <a href="/users/tologin">
                            <span>登录</span>
                        </a>
                        <a href="/users/toregister">
                            <span>注册</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!--RD Navbar Search-->
        <!-- <div class="header-search">
